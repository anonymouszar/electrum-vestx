#:import VERSION electrum_vestx.version.ELECTRUM_VERSION

Popup:
    canvas.before:
        Color:
            rgba: .384, .018, .232, 0.5
        Rectangle:
            size: self.size
            pos: self.pos
    title: _("About Vestx Electrum")
    background_color: 0.4, 0.4, 0.4, 1
    BoxLayout:
        orientation: 'vertical'
        spacing: '10dp'
        padding: '10dp'
        background_color: 0.4, 0.4, 0.4, 1
        canvas.before:
            Color:
                rgba: .384, .018, .232, 0.5
            Rectangle:
                size: self.size
                pos: self.pos
        GridLayout:
            cols: 2
            spacing: '10dp'
            TopLabel:
                text: _('Version')
                size_hint_x: 0.4
            TopLabel:
                text: VERSION
                size_hint_x: 0.6
            TopLabel:
                text: _('Licence')
                size_hint_x: 0.4
            TopLabel:
                text: "MIT Licence"
                size_hint_x: 0.6
            TopLabel:
                text: _('Homepage')
                size_hint_x: 0.4
            TopLabel:
                markup: True
                text: '[color=FFFFFF][ref=x]https://www.vestxcoin.com[/ref][/color]'
                on_ref_press:
                    import webbrowser
                    webbrowser.open("https://electrum.vestx.org")
                size_hint_x: 0.6
            TopLabel:
                text: _('Developers')
                size_hint_x: 0.4
            TopLabel:
                text: '\n'.join(['Thomas Voegtlin', 'Neil Booth', 'Akshay Arora', 'Sibby Yose'])
                size_hint_x: 0.6
        TopLabel:
            text: _('Distributed by Electrum Technologies GmbH')
            padding: '0dp', '20dp'
        Widget:
            size_hint: None, 0.5
        BoxLayout:
            size_hint: 1, None
            height: '48dp'
            Widget:
                size_hint: 0.5, None
                height: '48dp'
            Button:
                size_hint: 0.5, None
                height: '48dp'
                text: _('Close')
                on_release: root.dismiss()
