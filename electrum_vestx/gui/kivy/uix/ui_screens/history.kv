#:import _ electrum_vestx.gui.kivy.i18n._
#:import Factory kivy.factory.Factory
#:set font_light 'electrum_vestx/gui/kivy/data/fonts/Montserrat-Thin.otf'
#:set btc_symbol chr(171)
#:set mbtc_symbol chr(187)



<CardLabel@Label>
    color: 0.855, 0.898, 0.953, 0
    size_hint: 1, None
    text: ''
    text_size: self.width, None
    height: self.texture_size[1]
    halign: 'left'
    valign: 'top'


<HistoryItem@CardItem>
    background_color: 0.855, 0.898, 0.953, 0
    icon: 'atlas://electrum_vestx/gui/kivy/theming/light/important'
    message: ''
    is_mine: True
    amount: '--'
    action: _('Sent') if self.is_mine else _('Received')
    amount_color: (1, 0.392, 0.333, 1) if self.is_mine else (0.012, 0.871, 0.345, 1)
    confirmations: 0
    date: ''
    quote_text: ''
    Image:
        id: icon
        source: root.icon
        size_hint: None, 1
        allow_stretch: True
        width: self.height*0.35
        mipmap: True
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            orientation: 'horizontal'
            CardLabel:
                color: 0, 0, 0, 1
                text: root.action
                font_size: '12sp'
            CardLabel:
                color: root.amount_color
                font_size: '12sp'
                shorten: True
                halign: 'right'
                text: root.quote_text if app.is_fiat else root.amount
        BoxLayout:
            orientation: 'horizontal'
            CardLabel:
                color: 0, 0, 0, 1
                font_size: '10sp'
                shorten: True
                text: 'Sent to Address'
            CardLabel:
                color: 0, 0, 0, 1
                font_size: '10sp'
                shorten: True
                halign: 'right'
                text: root.date
             

<HistoryRecycleView>:
    viewclass: 'HistoryItem'
    RecycleBoxLayout:
        default_size: None, dp(56)
        default_size_hint: 1, None
        size_hint: 1, None
        height: self.minimum_height
        orientation: 'vertical'


HistoryScreen:
    name: 'history'
    content: history_container
    BoxLayout:
        orientation: 'vertical'
        canvas.before:
            Color:
                rgba: 1, 1, 1, 1
            Rectangle:
                pos: self.parent.pos
                size: self.parent.size
                source: 'atlas://electrum_vestx/gui/kivy/theming/light/background'
        BoxLayout:
            orientation: 'vertical'
            size_hint: 1, 0.14
            canvas.before:
                Color:
                    rgba: 0.855, 0.898, 0.953, 0
                Rectangle:
                    size: self.size
                    pos: self.pos
            RelativeLayout:
                CardLabel:
                    color: 0.486, 0.514, 0.584, 1
                    size_hint: None, 0.5
                    pos_hint: {'x': 0.05, 'y': 0.2}
                    font_size: '18sp'
                    text: 'Dashboard'
                    bold: True
                DashboardButton:
                    size_hint: 0.15, 0.15
                    pos_hint: {'right': 1, 'center_y': 0.4}
                    Image:
                        size: self.parent.size
                        pos: self.parent.pos
                        source: 'atlas://electrum_vestx/gui/kivy/theming/light/settings'

        BoxLayout:
            orientation: 'vertical'
            size_hint: 1, 0.23
            canvas.before:
                Color:
                    rgba: 0.855, 0.898, 0.953, 0
                Rectangle:
                    size: self.size
                    pos: self.pos
            BoxLayout:
                orientation: 'vertical'
                size_hint: 0.9, 1
                pos_hint: {'center_x': .5, 'center_y': .5}
                canvas.before:
                    Color:
                        rgba: 1, 1, 1, 1
                    Rectangle:
                        pos: self.pos
                        size: self.size
                        source: 'atlas://electrum_vestx/gui/kivy/theming/light/card_back'
                BoxLayout:
                    orientation: 'vertical'
                    size_hint: 0.83, 0.6
                    pos_hint: {'center_x': .5, 'center_y': .5}
                    canvas.before:
                        Color:
                            rgba: 1, 1, 1, 1
                        Rectangle:
                            pos: self.pos
                            size: self.size
                            source: 'atlas://electrum_vestx/gui/kivy/theming/light/wallet_card'
                    BoxLayout:
                        orientation: 'vertical'
                        size_hint: 1, 0.54
                        RelativeLayout:
                            Label:
                                size_hint: 0.35, 0.35
                                pos_hint: {'x': 0.05, 'top': 0.8}
                                Image:    
                                    size: self.parent.size
                                    pos: self.parent.pos
                                    source: 'atlas://electrum_vestx/gui/kivy/theming/light/wallet_card_logo'
                            DashboardButton: #qr icon button
                                size_hint: 0.35, 0.35
                                pos_hint: {'right': 1, 'top': 0.8}
                                Image:      
                                    size: self.parent.size
                                    pos: self.parent.pos
                                    source: 'atlas://electrum_vestx/gui/kivy/theming/light/qrcode_button'
                    BoxLayout:
                        orientation: 'vertical'
                        size_hint: 1, 0.14
                        #padding: 10
                        RelativeLayout:
                            CardLabel:
                                pos_hint: {'x': 0.1, 'center_y': 0.4}
                                color: 1, 1, 1, 1
                                font_size: '10sp'
                                text: 'YOUR VESTX BALANCE'
                                bold: True
                    BoxLayout:
                        orientation: 'vertical'
                        size_hint: 1, 0.32
                        #padding: 5
                        RelativeLayout:
                            DashboardButton:
                                pos_hint: {'x': 0, 'center_y': 0.7}
                                text: app.fiat_balance if app.is_fiat else app.balance
                                markup: True
                                shorten: False
                                color: 1, 1, 1, 1
                                font_size: '16sp'
                                on_release: app.is_fiat = not app.is_fiat if app.fx.is_enabled() else False            
                            
        BoxLayout:
            orientation: 'vertical'
            padding: 10
            size_hint: 1, 0.46
            canvas.before:
                Color:
                    rgba: 0.855, 0.898, 0.953, 0
                Rectangle:
                    size: self.size
                    pos: self.pos
            CardLabel:
                color: 0.463, 0.490, 0.557, 1
                font_size: '14sp'
                size_hint: 1, 0.2
                text: 'Transactions' 
                valign: 'center'
            HistoryRecycleView:
                id: history_container
                scroll_type: ['bars', 'content']
                bar_width: '15dp'
        BoxLayout:
            orientation: 'vertical'
            size_hint: 1, 0.1
            canvas.before:
                Color:
                    rgba: 0.855, 0.898, 0.953, 0
                Rectangle:
                    size: self.size
                    pos: self.pos
            RelativeLayout:
                DashboardButton:
                    size_hint: 0.85, 0.5
                    pos_hint: {'center_x': 0.5, 'center_y': 0.5}
                    Image:
                        size: self.parent.size
                        pos: self.parent.pos
                        source: 'atlas://electrum_vestx/gui/kivy/theming/light/send_button'