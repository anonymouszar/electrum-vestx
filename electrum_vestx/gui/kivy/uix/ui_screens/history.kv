#:import _ electrum_vestx.gui.kivy.i18n._
#:import Factory kivy.factory.Factory
#:set font_light 'electrum_vestx/gui/kivy/data/fonts/Montserrat-Thin.otf'
#:set btc_symbol chr(171)
#:set mbtc_symbol chr(187)



<CardLabel@Label>
    color: 0.855, 0.898, 0.953, 0
    size_hint: 1, None
    text: ''
    text_size: self.width, None
    height: self.texture_size[1]
    halign: 'left'
    valign: 'top'


<HistoryItem@CardItem>
    background_color: 0.855, 0.898, 0.953, 1
    icon: 'atlas://electrum_vestx/gui/kivy/theming/light/important'
    message: ''
    is_mine: True
    amount: '--'
    action: _('Sent') if self.is_mine else _('Received')
    amount_color: (1, 0.392, 0.333, 1) if self.is_mine else (0.012, 0.871, 0.345, 1)
    confirmations: 0
    date: ''
    quote_text: ''
    Image:
        id: icon
        source: root.icon
        size_hint: None, 1
        allow_stretch: True
        width: self.height*1.5
        mipmap: True
    BoxLayout:
        orientation: 'vertical'
        CardLabel:
            color: 0, 0, 0, 1
            text: root.action
            font_size: '12sp'
        BoxLayout:
            orientation: 'horizontal'
            CardLabel:
                color: 0, 0, 0, 1
                font_size: '10sp'
                shorten: True
                text: root.date
            CardLabel:
                color: root.amount_color
                font_size: '10sp'
                shorten: True
                halign: 'right'
                text: root.quote_text if app.is_fiat else root.amount  

<HistoryRecycleView>:
    viewclass: 'HistoryItem'
    RecycleBoxLayout:
        default_size: None, dp(56)
        default_size_hint: 1, None
        size_hint: 1, None
        height: self.minimum_height
        orientation: 'vertical'


HistoryScreen:
    name: 'history'
    content: history_container
    BoxLayout:
        orientation: 'vertical'
        BoxLayout:
            padding: 20
            size_hint: 1, 0.10
            canvas.before:
                Color:
                    rgba: 0.855, 0.898, 0.953, 1
                Rectangle:
                    size: self.size
                    pos: self.pos
            BoxLayout:
                orientation: 'horizontal'
                CardLabel:
                    color: 0.463, 0.490, 0.557, 1
                    font_size: '20sp'
                    text: 'Dashboard' 
                Button:
                    on_parent: self.MIN_STATE_TIME = 0.1
                    background_color: (0.855, 0.898, 0.953, 1)
                    color: 1, 1, 1, 1
                    size_hint: 1, 1
                    background_normal: 'atlas://electrum_vestx/gui/kivy/theming/light/settings'
                    background_down: 'atlas://electrum_vestx/gui/kivy/theming/light/settings'
                    halign: 'right'
        BoxLayout:
            orientation: 'vertical'
            size_hint: 1, 0.3
            canvas.before:
                Color:
                    rgba: 0.855, 0.898, 0.953, 1
                Rectangle:
                    size: self.size
                    pos: self.pos
            FloatLayout:
                canvas.before:
                    Color:
                        rgba: 0.855, 0.898, 0.953, 1
                Widget:
                    size_hint: 0.8, 0.8
                    pos_hint: {'center_x': .5, 'center_y': .5}
                    canvas.before:
                        Rectangle:
                            pos: self.pos
                            size: self.size
                            source: 'atlas://electrum_vestx/gui/kivy/theming/light/shadow_effect'
                BoxLayout:
                    orientation: 'vertical'
                    size_hint: 0.85, 0.85
                    pos_hint: {'center_x': .49, 'center_y': .515}
                    canvas.before:
                        Color:
                            rgba: 0.855, 0.898, 0.953, 1
                        BorderImage:
                            source: 'atlas://electrum_vestx/gui/kivy/theming/light/card_front'
                            size: self.size
                            pos: self.pos
                    BoxLayout:
                        orientation: 'vertical'
                        size_hint: 0.9, 0.9
                        pos_hint: {'center_x': .5, 'center_y': .5}
                        canvas.before:
                            Color:
                                rgba: 0.855, 0.898, 0.953, 1
                            BorderImage:
                                source: 'atlas://electrum_vestx/gui/kivy/theming/light/dashboard_wallet_card_inner'
                                size: self.size 
                                pos: self.pos
                        BoxLayout:
                            orientation: 'horizontal'
                            size_hint: 1, 0.25
                            padding: 1
                            Label:
                                size_hint: 0.5, 0.8
                                Image:    
                                    size: self.parent.size
                                    pos: self.parent.pos
                                    source: 'atlas://electrum_vestx/gui/kivy/theming/light/wallet_card_logo'
                            Label: #qr icon button
                                size_hint: 0.5, 0.8
                                halign: 'center'
                                Image:      
                                    size: self.parent.size
                                    pos: self.parent.pos
                                    source: 'atlas://electrum_vestx/gui/kivy/theming/light/qrcode'
    
                        BoxLayout:
                            orientation: 'vertical'
                            size_hint: 1, 0.25
                            padding: 5
                            CardLabel:
                                color: 1, 1, 1, 1
                                font_size: '10sp'
                                text: 'YOUR VESTX BALANCE'
                                halign: 'center'
                                valign: 'center'
                        BoxLayout:
                            orientation: 'vertical'
                            size_hint: 1, 0.5
                            padding: 20
                            CardLabel:
                                color: 1, 1, 1, 1
                                font_size: '20sp'
                                bold: 'true'
                                text: app.fiat_balance if app.is_fiat else app.balance
                                halign: 'center'
                            # Button:
                            #     text: app.fiat_balance if app.is_fiat else app.balance
                            #     halign: 'center'
                            #     markup: True
                            #     #color: 1, 1, 1, 1
                            #     font_size: '30dp'
                            #     bold: True
                            #     size_hint: 1, 0.25
                            #     on_release: app.is_fiat = not app.is_fiat if app.fx.is_enabled() else False            
        BoxLayout:
            orientation: 'vertical'
            padding: '25dp', '25dp'
            size_hint: 1, 0.5
            canvas.before:
                Color:
                    rgba: 0.855, 0.898, 0.953, 1
                Rectangle:
                    size: self.size
                    pos: self.pos
            FloatLayout:
                canvas.before:
                    Color:
                        rgba: 0.855, 0.898, 0.953, 1
                Widget:
                    size_hint: 0.9, 0.9
                    pos_hint: {'x': .05, 'y': .05}
                    canvas.before:
                        Rectangle:
                            pos: self.pos
                            size: self.size
                            source: 'atlas://electrum_vestx/gui/kivy/theming/light/shadow_effect'
                BoxLayout:
                    orientation: 'vertical'
                    size_hint: 0.9, 0.9
                    pos_hint: {'x': .045, 'y': .055}
                    canvas.before:
                        Color:
                            rgba: 0.855, 0.898, 0.953, 1
                        BorderImage:
                            source: 'atlas://electrum_vestx/gui/kivy/theming/light/card_front'
                            size: self.size
                            pos: self.pos
                    CardLabel:
                        color: 0.463, 0.490, 0.557, 1
                        font_size: '14sp'
                        size_hint: 1, 0.2
                        text: 'Transactions' 
                        valign: 'center'
                    HistoryRecycleView:
                        id: history_container
                        scroll_type: ['bars', 'content']
                        bar_width: '15dp'
        BoxLayout:
            orientation: 'vertical'
            padding: '5dp', '5dp'
            size_hint: 1, 0.1
            canvas.before:
                Color:
                    rgba: 0.855, 0.898, 0.953, 1
                Rectangle:
                    size: self.size
                    pos: self.pos
            FloatLayout:
                canvas.before:
                    Color:
                        rgba: 0.855, 0.898, 0.953, 1
                Widget:
                    size_hint: 0.9, 0.9
                    pos_hint: {'x': .05, 'y': .05}
                    canvas.before:
                        Rectangle:
                            pos: self.pos
                            size: self.size
                            source: 'atlas://electrum_vestx/gui/kivy/theming/light/shadow_effect'
                BoxLayout:
                    orientation: 'vertical'
                    size_hint: 0.9, 0.9
                    pos_hint: {'x': .045, 'y': .055}
                    canvas.before:
                        Color:
                            rgba: 0.855, 0.898, 0.953, 1
                        BorderImage:
                            source: 'atlas://electrum_vestx/gui/kivy/theming/light/card_front'
                            size: self.size
                            pos: self.pos
                    Label:
                        size_hint: 0.7, 0.7
                        pos_hint: {'x': .05, 'y': .05}
                        Image:
                            size: self.parent.size
                            pos: self.parent.pos
                            source: 'atlas://electrum_vestx/gui/kivy/theming/light/send_icon'
